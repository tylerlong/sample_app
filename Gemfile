  gem 'rspec-rails'
  gem 'capybara'
  gem 'rb-inotify'
  gem 'libnotify'
  gem 'guard-spork'
  gem 'spork'
  gem 'factory_girl_rails'
  gem 'cucumber-rails'
  gem 'database_cleaner'
end

